{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow-lg p-4" style="width: 100%; max-width: 400px;">
            <h2 class="text-center mb-4">Iniciar sesión</h2>

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    Error de autenticación: {{ error.message }}
                </div>
            {% endif %}

            <form method="post">
                <div class="form-group">
                    <label for="username">Usuario</label>
                    <input type="text" id="username" name="_username" class="form-control"
                           placeholder="Introduce tu usuario"
                           value="{{ ultimo_usuario }}"
                            {% if ultimo_usuario is empty %} autofocus {% endif %}
                           required>
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="_password" class="form-control"
                           placeholder="Introduce tu contraseña"
                            {% if ultimo_usuario is not empty %} autofocus {% endif %}
                           required>
                </div>

                <button type="submit" class="btn btn-primary btn-block mt-3">Entrar</button>
            </form>

            <hr>

            <div class="text-center">
                <a href="{{ path('app_registro') }}" class="btn btn-sm btn-outline-info">
                    ¿No tienes cuenta? Registrarse
                </a>
            </div>
        </div>
    </div>
{% endblock %}
